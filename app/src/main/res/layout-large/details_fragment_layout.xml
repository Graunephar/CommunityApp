<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dtFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#50b1c9"
    android:padding="10dp"
    tools:layout_editor_absoluteX="80dp"
    tools:layout_editor_absoluteY="169dp"
    android:layout_margin="80dp">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_dialog"
        android:layout_marginRight="8dp" />


    <ImageView
        android:id="@+id/details_fragment_imView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:maxHeight="300dp"
        android:minHeight="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/details_fragment_short_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_fragment_imView"
        tools:text="@string/create_event_txted_short"
        android:padding="8dp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/details_fragment_long_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:text="long description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_fragment_short_description"
        tools:text="@string/create_event_txted_long"
        android:padding="8dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/details_fragment_category_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="244dp"
        android:layout_marginTop="48dp"
        android:background="@android:color/white"
        android:text="Category"
        app:layout_constraintEnd_toEndOf="@+id/details_fragment_long_description"
        app:layout_constraintTop_toBottomOf="@+id/details_fragment_long_description"
        android:layout_marginRight="244dp"
        android:padding="8dp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/details_fragment_time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="224dp"
        android:layout_marginTop="48dp"
        android:background="@android:color/white"
        android:text="Time"
        app:layout_constraintStart_toStartOf="@+id/details_fragment_long_description"
        app:layout_constraintTop_toBottomOf="@+id/details_fragment_long_description"
        android:layout_marginLeft="224dp"
        android:padding="8dp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:id="@+id/details_fragment_tags_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="84dp"
        android:background="@android:color/white"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:text="Tags"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_fragment_long_description" />

    <Button
        android:id="@+id/details_fragment_resolve_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/btn_resolve" />


</android.support.constraint.ConstraintLayout>